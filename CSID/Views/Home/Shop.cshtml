@{
    ViewData["Title"] = "Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CSIDContext

<table class="table table-striped" align="center">
    <tr>
        <th style="text-align:left" class="align-middle"><h2>Item Description</h2></th>
        <th style="text-align:center" class="align-middle"><h2>Item Price</h2></th>
        <th style="text-align:center" class="align-middle"><h2>Quantity</h2></th>
        <th><h2></h2></th>
        <th><h2></h2></th>
    </tr>



    @foreach (Items items in Model.Items)
    {
        <tr>
            <td style="text-align:left" class="align-middle">@items.Description</td>
            <td style="text-align:center" class="align-middle">$@items.RetailPrice</td>
            <td style="align-content:center" class=" align-middle"><input align="middle" type="number" id="quantity" name="quantity"/></td>
            <td style="text-align:center" class="align-middle"><img src="https://media.timeout.com/images/100893385/630/472/image.jpg" width="60" height="60" /></td>
            <td style="text-align:center" class="align-middle">


                @if (User.Identity.IsAuthenticated)
                {

                    <button class="btn btn-outline-danger" onclick="location.href='/Home/Purchase?price=@items.RetailPrice&Quantity='+ document.querySelector('#quantity').value">BUY</button>
                }
                else
                {
                    <a class="btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Login">LOGIN</a>
                }
            </td>
        </tr>
    }
</table>